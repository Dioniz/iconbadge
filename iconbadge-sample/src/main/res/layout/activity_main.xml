<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.frandioniz.iconbadge_sample.MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_seekbar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimens: 25"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Badge position"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="{fa-arrow-up}"
                    android:textSize="50sp"
                    android:rotation="-45"
                    android:id="@+id/btn0"
                    android:layout_gravity="center_vertical" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="{fa-arrow-up}"
                    android:textSize="50sp"
                    android:rotation="45"
                    android:id="@+id/btn1"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="{fa-arrow-up}"
                    android:textSize="50sp"
                    android:rotation="-135"
                    android:id="@+id/btn2"
                    android:layout_gravity="center_vertical" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="{fa-arrow-up}"
                    android:textSize="50sp"
                    android:rotation="135"
                    android:id="@+id/btn3"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Random IconBadge"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.frandioniz.iconbadge.IconBadge
            android:id="@+id/iconbadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:iconsrc="{fa-android}"
            app:iconColor="@android:color/holo_green_dark"
            app:iconDimen="20dp"
            app:badgeNumber="6"
            app:badgeDimen="regular"
            app:badgeTextColor="@android:color/white"
            app:badgeBorderWidth="0.9dp"
            app:badgeCornersRadiusBottomRight="12dp"
            app:badgeBorderColor="@android:color/white"
            app:badgeBackgroundColor="@android:color/holo_blue_light"
            app:badgePosition="bottomRight"/>


        <com.frandioniz.iconbadge.IconBadge
            android:id="@+id/iconbadge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:iconsrc="{fa-android}"
            app:iconColor="@android:color/holo_green_dark"
            app:iconDimen="20dp"
            app:badgeNumber="6"
            app:badgeDimen="regular"
            app:badgeTextColor="@android:color/white"
            app:badgeBorderWidth="0.9dp"
            app:badgeCornersRadiusBottomRight="12dp"
            app:badgeBorderColor="@android:color/white"
            app:badgeBackgroundColor="@android:color/holo_blue_light"
            app:badgePosition="bottomRight"/>

    </LinearLayout>

</LinearLayout>
